<!DOCTYPE html>
<html lang="es">
    <%- include ('../partials/head', {title: "Productos"}) %> 
<body class="body">
    <%- include('../partials/header')  %> 

<div class="cart-products" id="products-id">
    <p class="close-btn" onclick="closeBtn()">X</p>
    <h3>Mi carrito</h3>
    <div class="card-item"></div>
    <h2 class="h2">Total: <strong class="price-total"></strong> $</h2>
</div>
    <main class="main main--index">
        <section class="section-sec section-sec--products">
            <h3 class="section-sec__titulo">Todos nuestros productos</h3>
            <div class="section-sec__cont-arts">
                <% productos.forEach(element => { %>
                    <article class="section-sec__arts">
                        <div class="section-sec__cont-picture-star">
                            <!-- <div class="section-sec__cont-star">
                                <i class="fas fa-star section-sec__star"></i>
                            </div> -->
                        </div>

                        <div class="section-sec__cont-datos">
                            <picture class="section-sec__picture">
                                <a href="/products/detail/<%= element.id %>" class="section-sec__titulo-enlace">
                                    <img src="../images/juegos/<%= element.images[0].img_url%>" alt="El juego es <%= element.name_game %>" class="section-sec__imgs" id="dale">
                                </a>
                            </picture>
                            <span id="titulo" class="section-sec__spans"><%= element.name_game %></span>
                            <p id="datadata">$<span id="precio" class="section-sec__spans"><%= element.price %></span></p>
                            <p class="button-carrito" id="submit" data-id= "<%= element.id %>">AÃ±adir al carrito</p>
                        </div>
                    </article>
                <% }) %>        
            </div>
        </section>
    </main>
    
    <%- include ('../partials/footer') %> 
    <script src="/js/mostarCart.js"></script>
    <script src="/js/carritoFinal.js"></script>

</body>
    
</html>